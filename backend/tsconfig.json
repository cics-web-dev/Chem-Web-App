{
  "compilerOptions": {
    "target": "ES2022", 
    "module": "NodeNext",                               
    "rootDir": "src/",                    
    "allowJs": true, 
    "outDir": "./dist",                                 
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,     
    "strict": true,                                    
    "noUnusedLocals": false,                             
    "noUnusedParameters": false,                         
    "skipLibCheck": true                                
  },
  "ts-node": {
    "esm": true,
  },
}
